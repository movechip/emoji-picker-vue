$border-color-emoji = #eee
$bgcolor-emoji-entity-hover = #eee
$bgcolor-emoji = #fff
$font-size-emoji = 24px
$count-oneline-emoji-tabview = 8
$count-oneline-emoji-tab = 4
$width-tabview-list-item = $font-size-emoji + 12px
$height-tabview-list-item = $width-tabview-list-item
$height-emoji-body = 180px
$width-emoji-body = $width-tabview-list-item * $count-oneline-emoji-tabview + 8px
*
    margin 0
    padding 0
$clearfix
    &:after
        display block
        content ' '
        clear both
        height 0
        visibility hidden
$base-list-style
        float left
        cursor pointer 
        text-align center
        user-select none
.emoji
    position relative
    &-main
        position absolute
        top 0
        left 0
        background-color $bgcolor-emoji
        border 1px solid $border-color-emoji
        border-radius 5px
        padding 5px
        font-size $font-size-emoji
        &__tab,
        &__recent
            border-bottom 1px solid $border-color-emoji
        &__text
            font-size 12px
            color #ddd
            text-align center
        &__body
            height $height-emoji-body
            width $width-emoji-body
            overflow-y auto
        &__tab-view
            display none
        &__entity
            display inline-block
            cursor pointer
            user-select none
            &:after
                content ''
                display block
                visibility hidden
                height 5px
                background-color #eee
            &:hover:after
                visibility visible
    &-l-list
        list-style none
        @extend $clearfix
        &__item
            @extend $base-list-style
            width $width-tabview-list-item
            height $height-tabview-list-item
            line-height $height-emoji-code
            &:hover
                background-color $bgcolor-emoji-entity-hover
                border-radius 5px
            &--for-tab
                width (100 / $count-oneline-emoji-tab)%
                @extend $base-list-style         
    &-js
        &-tab--is-active
            &:after
                visibility: visible;
                background-color: gray;
        &-tabview--is-active
            display block
    &__scroll
        &::-webkit-scrollbar
            width: 8px;
            height: 8px;
        &::-webkit-scrollbar-corner
            background: rgba(0,0,0,0);
        &::-webkit-scrollbar-thumb
            background: #C2C2C2;
            border-radius: 10px;
        &::-webkit-scrollbar-thumb:hover
            background: #b2b2b2;
        &::-webkit-scrollbar-track
            border-radius: 10px;
